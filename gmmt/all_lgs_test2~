#!/bin/bash

if [ "$1" = "nocomp" ]; then
	echo "No previous file for comparison."
else if [ -e "$1" ]; then
	echo "Comparing with $1" 
else
	echo "Usage: all_lgs_test nocomp | comparison file"
	exit 1
fi
fi

DATE=`date "+%Y-%m-%d"`
#LGS=[eng hau]


for src in eng epo fas fin hai hau heb hye isl ita spa zul; do
   	for tgt in eng epo fas fin hai hau heb hye isl ita spa zul; do
      
		if [ "${tgt}" != "${src}" ]; then

			`echo ~/logon/batch --binary --from $src --to $tgt --ascii ~/logon/uw/mmt/test_sentences/${src}.txt`

		fi

   	done
done


mkdir ~/logon/uw/mmt/alt/${DATE}
cd ~/logon/uw/mmt/alt/
mv ~/*.fan ./${DATE}/

`echo "Results for ${DATE}" > summary.${DATE}`

for file in $( ls $DATE ); do
	`echo $file >> summary.${DATE}`
	`grep "|<" $DATE/$file | grep "= 0" | wc >> summary.${DATE}`
done


`python ../formatresults.py summary.${DATE} $1`
mv table.tex table.$DATE.tex
pdflatex table.$DATE.tex


	
