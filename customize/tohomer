#!/bin/bash

if [ "$1" = -m ]
then
    copymatrix=true
    shift
fi

if [ $# != 1 ]
then
    echo "Usage: $0 [-m] <directory name>"
    exit 1
fi

scp `echo * | sed 's/[^ ]*~//g' | sed 's/#[^ ]*#//g' | sed 's/CVS//g' | sed 's/tohomer//g'` uwcl@homer.u.washington.edu:public_html/$1

if [ $copymatrix ]
then
    scp -r ../*.* ../README ../lkb ../pet uwcl@homer.u.washington.edu:public_html/$1/matrix-core
fi
